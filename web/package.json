{
  "name": "@iloveyou/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "pwa:generate-icons": "pwa-asset-generator public/icon-512x512.png public/icons --manifest public/manifest.json",
    "deploy:firebase": "npm run build && firebase deploy --only hosting",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.1",
    "@mui/x-date-pickers": "^6.18.3",
    "date-fns": "^2.30.0",
    "firebase": "^11.9.0",
    "i18next": "^25.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.5.2",
    "react-router-dom": "^6.20.1",
    "react-lazy-load-image-component": "^1.6.0",
    "react-hotkeys-hook": "^4.4.1",
    "fuse.js": "^7.0.0",
    "file-saver": "^2.0.5",
    "react-dropzone": "^14.2.3",
    "lottie-react": "^2.4.0",
    "web-vitals": "^3.5.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/file-saver": "^2.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.0.4",
    "vite-bundle-analyzer": "^0.7.0",
    "@vitest/coverage-v8": "^1.0.4",
    "lighthouse": "^11.4.0"
  }
}